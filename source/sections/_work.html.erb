<div class="container work-header-container">
  <h2>Work</h2>
</div>

<section id="work-articles-carousel" class="work-articles slide">

  <div class="carousel-inner">
  <% page_articles.each_with_index do |article, i| %>
    <article class="work-article item<%= " active" if i == 0 %> <%= article.data.style %>">

        <div class="work-media-well" style="background-image:url(<%= article.data.media_well %>)">
          <div class="loading" style="display:none" data-scroll-stream-loading>
            Loading...
          </div>
        </div>

        <div class="work-article-container">

          <div class="container">
            <header class="article-header">
              <h2><%= article.title %></h2>
              <h3><%= article.data.tags %></h3>
              <p><%= article.data.description %></p>
            </header>
          </div>

          <div class="container">
            <div class="article-body">
              <%= article.body %>
            </div>
          </div>
        </div>

    </article>
  <% end %>
  </div>


  <!-- Controls -->
  <div class="carousel-controls">
    <a class="left" href="#work-articles-carousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
    </a>
    <a class="right" href="#work-articles-carousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
    </a>
  </div>

</section>

